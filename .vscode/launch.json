  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Module (venv)",
      "type": "python",
      "request": "launch",
      "module": "app",
      "justMyCode": true,
      "cwd": "${workspaceFolder}",
      "python": "${workspaceFolder}/.venv/bin/python", // Specify the Python interpreter from the virtual environment
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      }
    }
